{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "virtualMachineName": {
      "type": "string"
    },
    "adminUserName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "subId": {
      "type": "string"
    },
    "availabilitySetName": {
      "type": "string"
    },
    "virtualMachineSize": {
      "type": "string"
    },
    "vmCount": {
      "type": "int"
    },
    "tagValues": {
      "type": "object"
    },
    "imageValues": {
      "type": "object"
    },
    "datadiskCount": {
      "type": "int"
    },
    "baseOsType": {
      "type": "string"
    },
    "datadiskSize": {
      "type": "int"
    },
    "storageAccountType": {
      "type": "string"
    },
    "vhdLink": {
      "type": "string"
    }
  },
  "variables": {
    "dataDiskId": "[concat('/subscriptions/',parameters('subId'),'/resourceGroups/', resourceGroup().name,'/providers/Microsoft.Compute/disks/')]"
  },
  "resources": [
    {
      "apiVersion": "2016-09-01",
      "name": "[concat('nestedVHD-', parameters('virtualMachineName'), copyIndex(1))]",
      "type": "Microsoft.Resources/deployments",
      "copy": {
        "name": "VHDcopy",
        "count": "[parameters('vmCount')]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[parameters('vhdLink')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualMachineName": { "value": "[concat(parameters('virtualMachineName'), copyIndex(1))]" },
          "datadiskCount": { "value": "[parameters('datadiskCount')]" },
          "storageAccountType": { "value": "[parameters('storageAccountType')]" },
          "datadiskSize": { "value": "[parameters('datadiskSize')]" },
          "tagValues": { "value": "[parameters('tagValues')]" }
        }
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('virtualMachineName'), copyIndex(1))]",
      "apiVersion": "2016-04-30-preview",
      "tags": "[parameters('tagValues')]",
      "location": "[parameters('location')]",
      "properties": {
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',concat(parameters('virtualMachineName'), copyindex(1), 'nic1'))]"
            }
          ]
        },
        "osProfile": {
          "computerName": "[concat(parameters('virtualMachineName'), copyIndex(1))]",
          "adminUserName": "[parameters('adminUserName')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "availabilitySet": {
          "id": "[concat(resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySetName')))]"
        },
        "storageProfile": {
          "imageReference": "[parameters('imageValues')]",
          "osDisk": {
            "name": "[concat(parameters('virtualMachineName'), copyIndex(1), 'osdisk.vhd')]",
            "createOption": "FromImage",
            "caching": "ReadWrite",
            "osType": "[parameters('baseOsType')]",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            }
          },
          "dataDisks": "[reference(concat('nestedVHD-', parameters('virtualMachineName'), copyIndex(1))).outputs.result.value]"
        }
      },
      "dependsOn": [ ],
      "copy": {
        "count": "[parameters('vmCount')]",
        "name": "vmLoop"
      }
    }
  ]
  }